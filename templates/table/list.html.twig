{% extends 'layout.html.twig' %}

{% block page_content %}
    {% embed '@AdminLTE/Widgets/box-widget.html.twig' %}
        {% block box_title %} Список {% endblock %}
        {% block box_tools %}
            <div class="btn-group">
                <a class="btn btn-primary " href="{{ path('configTable', {'tableId': table.id}) }}"><i class="glyphicon glyphicon-cog"></i></a>
                <a class="btn btn-primary " href="{{ path('configColumns', {'tableId': table.id}) }}"><i class="glyphicon glyphicon-th-list"></i></a>
                <a class="btn btn-primary " href="{{ path('relatives', {'tableId': table.id}) }}"><i class="glyphicon glyphicon-link"></i></a>
            </div>
        {% endblock %}
        {% block box_body %}
            <table class="table table-bordered table-hover dataTable">
                <thead>
                <tr role="row">
                    {% for column in columns %}
                        <th title="{{ column.description }}">{{ column.label }}</th>
                    {% endfor %}
                </tr>
                </thead>
                <tbody>
                {% for row in rows %}
                    <tr role="row" class="odd">
                        {% for column in columns %}
                            <th>{{ applyColumnDecorator(row.data[column.name], column) | raw }} </th>
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    {% for column in columns %}
                        <th title="{{ column.description }}">{{ column.label }}</th>
                    {% endfor %}
                </tr>
                </tfoot>
            </table>
        {% endblock %}
    {% endembed %}
{% endblock %}